//a
#include <iostream>
using namespace std;
int main() {
int sum = 0;
for (int i = 1; i <= 1000; i++) {
sum += i;
}
double avg = (double)sum / 1000;
cout << "Среднее арифметическое: " << avg << endl;
return 0;
}
//б
#include <iostream>
using namespace std;
int main() {
int b;
cout << "Введите значение b (b >= 100): ";
cin >> b;
int sum = 0;
for (int i = 100; i <= b; i++) {
sum += i;
}
double avg = (double)sum / (b - 99);
cout << "Среднее арифметическое: " << avg << endl;
return 0;
}
// в
#include <iostream>
using namespace std;
int main() {
int a;
cout << "Введите значение a (a <= 200): ";
cin >> a;
int sum = 0;
for (int i = a; i <= 200; i++) {
sum += i;
}
double avg = (double)sum / (201 - a);
cout << "Среднее арифметическое: " << avg << endl;
return 0;
}
// г
#include <iostream>
using namespace std;
int main() {
int a, b;
cout << "Введите значение a (a ≤ b): ";
cin >> a;
cout << "Введите значение b: ";
cin >> b;
int sum = 0;
for (int i = a; i <= b; i++) {
sum += i;
}
double avg = (double)sum / (b - a + 1);
cout << "Среднее арифметическое: " << avg << endl;
return 0;
}
